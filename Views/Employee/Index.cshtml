@model IQueryable<WebApplication7.Models.EmployeeVM>

@using Microsoft.Extensions.Localization
@using WebApplication7.Resource.Employee

@inject IStringLocalizer<SharedResource> SharedLocalizer

@{
    ViewBag.Title = SharedLocalizer["Employee"];
    var Culture = System.Threading.Thread.CurrentThread.CurrentCulture.Name;
}





@if (Culture == "ar-EG")
{
    <h3 id="Myh">
        <a asp-controller="Employee" asp-action="Index" asp-route-culture="en-US">@SharedLocalizer["English"]</a>
    </h3>
}

@if (Culture == "en-US")
{
    <h3 id="Myh">
        <a asp-controller="Employee" asp-action="Index" asp-route-culture="ar-EG">@SharedLocalizer["Arabic"]</a>
    </h3>
}



<br />


<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">@SharedLocalizer["AddEmployee"]</a>


<div class="container-fluid">
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>@SharedLocalizer["WTE"]</h2>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="javascript:void(0);">Action</a></li>
                                <li><a href="javascript:void(0);">Another action</a></li>
                                <li><a href="javascript:void(0);">Something else here</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped text-center table-hover js-basic-example dataTable">

                            <thead>
                                <tr>
                                    <th class="text-center">@SharedLocalizer["Name"]</th>
                                    <th class="text-center">@SharedLocalizer["Salary"]</th>
                                    <th class="text-center">@SharedLocalizer["Department"]</th>
                                    <th class="text-center">Photo</th>
                                    <th class="text-center">Cv</th>
                                    <th class="text-center">@SharedLocalizer["Edit"]</th>
                                    <th class="text-center">@SharedLocalizer["Delete"]</th>
                                    <th class="text-center">Details</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>

                                    <td>@item.Name</td>
                                    <td>@item.Salary</td>
                                    <td>@item.DepartmentName</td>
                                    <td>
                                        <img src="~/Files/Photos/@item.PhotoName" width="30" height="30" />
                                    </td>
                                    <td>
                                        <a href="~/Files/Docs/@item.CvName">Download Cv</a>
                                    </td>

                                    <td><a asp-controller="Employee" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">@SharedLocalizer["Edit"]</a></td>
                                    <td><a asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">@SharedLocalizer["Delete"]</a></td>
                                    <td><a asp-controller="Employee" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a></td>

                                </tr>
                                }

                            </tbody>


                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





@*<input type="text" placeholder="@SharedLocalizer["Edit"]" />*@



@section DataTableSection{

    <script>
        $(function () {
            $('.js-basic-example').DataTable({
                responsive: true,
                paging: true,
                pageLength: 3,
                bSort: true,
                bFilter: true,
                //bLengthChange: false,
                //bInfo: false,
                lengthMenu: [[3, 5, 10, 25, 50, -1], [3, 5, 10, 25, 50, "All"]],

            });
        });
    </script>
}

